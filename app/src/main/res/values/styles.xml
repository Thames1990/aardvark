<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <event name="colorPrimary">@color/colorPrimary</event>
        <event name="colorPrimaryDark">@color/colorPrimaryDark</event>
        <event name="colorAccent">@color/colorAccent</event>
        <event name="windowActionBar">false</event>
        <event name="windowNoTitle">true</event>
    </style>

    <style name="PreferenceTheme" parent="AppTheme">
        <event name="windowActionBar">true</event>
        <event name="windowNoTitle">false</event>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>