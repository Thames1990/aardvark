<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:order="1"
        android:title="@string/preference_general">

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/preference_show_changelog"
            android:title="@string/preference_show_changelog" />

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/preference_use_bottom_sheets"
            android:summary="@string/preference_use_bottom_sheets_summary"
            android:title="@string/preference_use_bottom_sheets" />

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/preference_confirm_exit"
            android:title="@string/preference_confirm_exit" />

    </PreferenceCategory>

    <PreferenceCategory
        android:order="5"
        android:title="@string/preference_about">

        <Preference
            android:key="@string/preference_send_feedback"
            android:summary="@string/preference_support_summary"
            android:title="@string/preference_send_feedback" />

        <Preference
            android:key="@string/preference_faq"
            android:summary="@string/preference_faq_summary"
            android:title="@string/preference_faq" />

        <Preference
            android:key="@string/preference_privacy_policy"
            android:title="@string/preference_privacy_policy" />

        <Preference
            android:key="@string/preference_terms_and_conditions"
            android:title="@string/preference_terms_and_conditions" />

        <Preference
            android:key="@string/preference_version"
            android:title="@string/preference_version" />

    </PreferenceCategory>

</PreferenceScreen>