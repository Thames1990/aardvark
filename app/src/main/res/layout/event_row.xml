<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/contraint_layout_margin_extra_small"
        android:layout_marginStart="@dimen/contraint_layout_margin_extra_small"
        android:layout_marginTop="@dimen/contraint_layout_margin_extra_small"
        android:text="@string/title"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/contraint_layout_margin_extra_small"
        android:layout_marginLeft="@dimen/contraint_layout_margin_extra_small"
        android:layout_marginStart="@dimen/contraint_layout_margin_extra_small"
        android:layout_marginTop="@dimen/contraint_layout_margin_small"
        android:text="@string/time"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"/>

    <ImageView
        android:id="@+id/location_icon"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/contraint_layout_margin_extra_small"
        android:layout_marginRight="@dimen/contraint_layout_margin_extra_small"
        android:layout_marginTop="@dimen/contraint_layout_margin_extra_none"
        android:contentDescription="@string/content_description_location_icon"
        app:layout_constraintBottom_toBottomOf="@+id/location"
        app:layout_constraintRight_toLeftOf="@+id/location"
        app:layout_constraintTop_toTopOf="@+id/location"
        app:srcCompat="@drawable/place"/>

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/contraint_layout_margin_extra_small"
        android:layout_marginRight="@dimen/contraint_layout_margin_extra_small"
        android:layout_marginTop="@dimen/contraint_layout_margin_extra_small"
        android:text="@string/location"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/measurement_types"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/contraint_layout_margin_extra_none"
        android:layout_marginEnd="@dimen/contraint_layout_margin_extra_small"
        android:layout_marginLeft="@dimen/contraint_layout_margin_extra_small"
        android:layout_marginRight="@dimen/contraint_layout_margin_extra_small"
        android:layout_marginTop="@dimen/contraint_layout_margin_extra_none"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/time"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/time"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/time">
    </LinearLayout>

</android.support.constraint.ConstraintLayout>