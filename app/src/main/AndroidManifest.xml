<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.uni_marburg.mathematik.ds.serval">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.USE_FINGERPRINT" />

    <uses-feature android:name="android.hardware.lastLocation.gps" />
    <uses-feature android:name="android.hardware.wifi" />

    <application
        android:name=".Aardvark"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/aardvark_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.activities.IntroActivity"
            android:theme="@style/Theme.Intro" />
        <activity android:name=".view.activities.IntroActivity2" />
        <activity android:name=".view.activities.FingerprintActivity" />
        <activity
            android:name=".view.activities.MainActivity"
            android:configChanges="orientation|screenSize"
            android:theme="@style/AppTheme.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activities.DetailActivity"
            android:theme="@style/Kau.Translucent.SlideBottom" />
        <activity
            android:name=".view.activities.SettingsActivity"
            android:theme="@style/Kau.Translucent" />
        <activity
            android:name=".view.activities.AboutActivity"
            android:theme="@style/Kau.About" />

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="${KEY_FABRIC}" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${KEY_GOOGLE_MAPS}" />
    </application>

</manifest>